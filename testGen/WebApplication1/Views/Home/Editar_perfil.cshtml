@{
    ViewData["Title"] = "Editar_perfil";
}

<div class="container perfil-dueno">
    <header class="header">
        <div class="logo">
            <img src="/images/logo-puppybond.png" alt="Puppy Bond">
        </div>
        <nav class="nav">
            <input type="text" placeholder="Buscar" class="search-bar">
            <div class="icons">
                <a href="#" class="icon bell"><i class="fas fa-bell"></i></a>
                <a href="#" class="icon chat"><i class="fas fa-comment"></i></a>
                <a href="#" class="icon profile"><i class="fas fa-user"></i></a>
            </div>
        </nav>
    </header>

    <main>
        <div class="profile-section">
            <div class="profile-picture">
                <img src="/images/default-profile.png" alt="Foto de perfil">
            </div>

            <div class="profile-info">
                <h2>Nombre Dueño</h2>
                <p>
                    <strong>Apellidos:</strong> <span>Apellido del Dueño</span> <a href="#" class="edit"><i class="fas fa-pen"></i></a>
                </p>
                <p>
                    <strong>Correo electrónico:</strong> <span>correo@ejemplo.com</span> <a href="#" class="edit"><i class="fas fa-pen"></i></a>
                </p>
                <p>
                    <strong>Dirección:</strong> <span>Dirección del Dueño</span> <a href="#" class="edit"><i class="fas fa-pen"></i></a>
                </p>
                <div class="description">
                    <strong>Pequeña descripción:</strong>
                    <textarea class="description-text" readonly>Descripción breve sobre el dueño.</textarea>
                    <a href="#" class="edit"><i class="fas fa-pen"></i></a>
                </div>
            </div>
        </div>

        <div class="availability-section">
            <h3>Disponibilidad</h3>
            <textarea class="availability-text" readonly>Información sobre la disponibilidad del dueño.</textarea>
            <a href="#" class="edit"><i class="fas fa-pen"></i></a>
        </div>
    </main>
</div>

<style>
    .perfil-dueno {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        background-color: #f7f7f7;
        border-bottom: 1px solid #ddd;
    }

    .logo img {
        height: 50px;
    }

    .nav {
        display: flex;
        align-items: center;
    }

    .search-bar {
        padding: 5px;
        margin-right: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .icons .icon {
        margin-left: 10px;
        font-size: 20px;
        color: #555;
    }

    .profile-section {
        display: flex;
        gap: 20px;
        margin: 20px 0;
    }

    .profile-picture img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 2px solid #ddd;
    }

    .profile-info h2 {
        margin-bottom: 10px;
    }

    .profile-info p {
        margin: 5px 0;
    }

    .description,
    .availability-section {
        margin-top: 20px;
    }

    .description-text,
    .availability-text {
        width: 100%;
        height: 80px;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 5px;
        resize: none;
    }

    .edit {
        margin-left: 10px;
        color: #007BFF;
        cursor: pointer;
    }
</style>