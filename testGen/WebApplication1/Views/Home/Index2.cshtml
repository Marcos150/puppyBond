@{
    ViewData["Title"] = "Interfaz Mascotas";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar izquierdo -->
        <div class="col-md-3 p-3 border-end">
            <div class="mb-4 text-center">
                <!-- Usuario Mascota -->
                <div class="p-3 border rounded bg-light">
                    <i class="fas fa-user fa-2x"></i>
                    <h5 class="mt-2">Usuario Mascota</h5>
                </div>
            </div>
            <!-- Lista de pendientes -->
            <div class="pending-list p-3 border rounded bg-light">
                <h6>Pendientes</h6>
                <ul class="list-unstyled mt-2">
                    <li class="d-flex align-items-center mb-2">
                        <i class="fas fa-user-circle me-2"></i> Mascota 1
                    </li>
                    <li class="d-flex align-items-center mb-2">
                        <i class="fas fa-user-circle me-2"></i> Mascota 2
                    </li>
                    <li class="d-flex align-items-center mb-2">
                        <i class="fas fa-user-circle me-2"></i> Mascota 3
                    </li>
                    <li class="d-flex align-items-center">
                        <i class="fas fa-user-circle me-2"></i> Mascota 4
                    </li>
                </ul>
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="col-md-9 p-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <!-- Iconos de acciones -->
                <div class="action-icons d-flex gap-3">
                    <i class="fas fa-bell fa-lg"></i>
                    <i class="fas fa-comment fa-lg"></i>
                    <i class="fas fa-user-circle fa-lg"></i>
                </div>
            </div>

            <!-- Contenido central -->
            <div class="d-flex align-items-center">
                <!-- Flecha izquierda -->
                <button class="btn btn-light me-3">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <!-- Imagen y detalles -->
                <div class="pet-info text-center">
                    <div class="pet-image border rounded mb-2" style="width: 200px; height: 200px;"></div>
                    <h5>Nombre Perro</h5>
                    <p class="mb-1">Raza</p>
                    <p class="text-muted small">Descripción</p>
                    <p class="text-muted small">
                        <i class="fas fa-user"></i> Dueño
                    </p>
                    <!-- Botones de acciones -->
                    <!-- Iconos de acción -->
                    <div class="actions d-flex justify-content-around">
                        <button class="btn btn-outline-danger" aria-label="Eliminar">❌</button>
                        <button class="btn btn-outline-primary" aria-label="Adoptar">🐾</button>
                        <button class="btn btn-outline-info" aria-label="Información">ℹ</button>
                    </div>
                </div>
                <!-- Flecha derecha -->
                <button class="btn btn-light ms-3">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Estilos opcionales -->
<style>
    .pending-list {
        max-height: 300px;
        overflow-y: auto;
    }

    .pet-image {
        background-color: #f8f9fa;
    }

    .action-icons i {
        cursor: pointer;
    }

    .action-buttons button {
        width: 40px;
        height: 40px;
        border-radius: 50%;
    }
</style>
