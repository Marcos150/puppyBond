@model WebApplication1.Models.UsuarioViewModel
@{
    ViewData["Title"] = "Editar_Perfil";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white text-center py-3">
            <h3 class="mb-0">Editar Perfil</h3>
        </div>
        <div class="card-body p-4">
            @using (Html.BeginForm("Editar_Perfil", "Usuario", FormMethod.Post, new { @class = "edit-profile-form" }))
            {
                @Html.ValidationSummary(true)

                <div class="row mb-3">
                    <!-- Foto de Perfil -->
                    <div class="col-md-4 text-center">
                        <img src="/images/default-profile.png" class="rounded-circle border" alt="Foto de perfil" style="width: 150px; height: 150px;">
                        <p class="mt-2 text-muted">Foto de perfil</p>
                    </div>

                    <!-- Información del Usuario -->
                    <div class="col-md-8">
                        <div class="form-group mb-3">
                            <label for="Nombre" class="form-label fw-bold">Nombre</label>
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Introduce tu nombre" })
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="Apellidos" class="form-label fw-bold">Apellidos</label>
                            @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control", placeholder = "Introduce tus apellidos" })
                            @Html.ValidationMessageFor(m => m.Apellidos, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="Email" class="form-label fw-bold">Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            <label for="Ubicacion" class="form-label fw-bold">Ubicación</label>
                            @Html.TextBoxFor(m => m.Ubicacion, new { @class = "form-control", placeholder = "Introduce tu ubicación" })
                            @Html.ValidationMessageFor(m => m.Ubicacion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!-- Sección de Disponibilidad -->
                <div class="form-group mb-4">
                    <label for="Disponibilidad" class="form-label fw-bold">Disponibilidad</label>
                    @Html.TextAreaFor(m => m.Disponibilidad, new { @class = "form-control", placeholder = "Describe tu disponibilidad", rows = "4" })
                    @Html.ValidationMessageFor(m => m.Disponibilidad, "", new { @class = "text-danger" })
                </div>

                <!-- Botones -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4">Guardar cambios</button>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary px-4">Cancelar</a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .card {
        max-width: 800px;
        margin: auto;
    }

    .form-label {
        font-size: 1rem;
        color: #333;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn {
        border-radius: 8px;
        font-weight: 600;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>
