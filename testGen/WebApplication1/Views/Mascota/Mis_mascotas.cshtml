@model WebApplication1.Models.MascotaViewModel

@{
    ViewData["Title"] = "Editar Mascota";
}

<div class="container mt-5">
    <h2>Editar Información de @Model.Name</h2>

    <form asp-action="Editar" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Nombre</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Raza" class="form-label">Raza</label>
                    <input asp-for="Raza" class="form-control" required />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Sexo" class="form-label">Sexo</label>
                    <select asp-for="Sexo" class="form-control">
                        <option value="Macho">Macho</option>
                        <option value="Hembra">Hembra</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Edad" class="form-label">Edad</label>
                    <input asp-for="Edad" type="number" class="form-control" required />
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Tamanyo" class="form-label">Tamaño</label>
                    <select asp-for="Tamanyo" class="form-control">
                        <option value="Pequeño">Pequeño</option>
                        <option value="Mediano">Mediano</option>
                        <option value="Grande">Grande</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Vacunacion" class="form-label">Estado de Vacunación</label>
                    <select asp-for="Vacunacion" class="form-control">
                        <option value="Completado">Completado</option>
                        <option value="Pendiente">Pendiente</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label for="Imagen" class="form-label">Imagen de Perfil</label>
                    <input asp-for="Imagen" type="file" class="form-control" accept="image/*" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Mis_mascotas" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

<!-- Estilos opcionales -->
<style>
    .pending-list {
        max-height: 300px;
        overflow-y: auto;
    }

    .pet-image {
        background-color: #f8f9fa;
    }

    .action-icons i {
        cursor: pointer;
    }
</style>