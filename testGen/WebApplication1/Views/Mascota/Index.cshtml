@model IEnumerable<TestGen.ApplicationCore.EN.DSM.UsuarioEN>
@model IEnumerable<TestGen.ApplicationCore.EN.DSM.MascotaEN>

@{
    ViewData["Title"] = "PuppyBond";
}

<main role="main" class="container-3cuartos">
    <div>
        @foreach (var item in Model)
        {
            <div class="card">
                <h2>@Html.DisplayFor(modelItem => item.Nombre)</h2>

            </div>
        }
    </div>
</main>

<div class="container">

    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://hips.hearstapps.com/hmg-prod/images/dog-puppy-on-garden-royalty-free-image-1586966191.jpg?crop=0.752xw:1.00xh;0.175xw,0&resize=1200:*" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://hips.hearstapps.com/hmg-prod/images/dog-puppy-on-garden-royalty-free-image-1586966191.jpg?crop=0.752xw:1.00xh;0.175xw,0&resize=1200:*" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://hips.hearstapps.com/hmg-prod/images/dog-puppy-on-garden-royalty-free-image-1586966191.jpg?crop=0.752xw:1.00xh;0.175xw,0&resize=1200:*" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Carrusel de perros -->
    <div class="text-center">
        <div class="d-flex justify-content-center align-items-center">
            <button class="btn btn-link" aria-label="Anterior">⬅</button>
            <div class="dog-card mx-3">
                <img src="/images/placeholder.png" alt="Foto de perro" class="img-fluid">
                <div class="info">
                    <h3>Nombre Perro <span class="badge bg-secondary">Raza</span></h3>
                    <p>Descripción breve del perro...</p>
                    <p><strong>Dueño:</strong> <span class="text-muted">Nombre del Dueño</span></p>
                </div>
                <!-- Iconos de acción -->
                <div class="actions d-flex justify-content-around">
                    <button class="btn btn-outline-danger" aria-label="Eliminar">❌</button>
                    <button class="btn btn-outline-primary" aria-label="Adoptar">🐾</button>
                    <button class="btn btn-outline-info" aria-label="Información">ℹ</button>
                </div>
            </div>
            <button class="btn btn-link" aria-label="Siguiente">➡</button>
        </div>
    </div>
</div>
